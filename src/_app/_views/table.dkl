    #$
    style{
        $'

        #table-all{
            width: 100%;
            background-color: white;
            text-align: left;
            border-collapse: collapse;

        }
        .head{
            background-color: #246355;
            border-bottom: solid 5px #0F362D;
            color: white;
            height: 38px;
            font-family: Arial;
            padding: 10px;
           
            
        }
        .head-th{
             

        }
        .t-body{
            position:reslative;
            font-family: Arial;
            
        }
        .body{
         position:reslative;
         border-bottom:blue;
         top:30px;
            
        }
        td{
            padding: 6px;
        }
        .t-body:nth-child(even){
	     background-color: #ddd;
        }
        .t-body:hover{
            background-color: #369681;
            color: white;
        }
         '
    }
    #!
   list.filter_tables::
	{
		ref lista=list.create()

        new a{@"nombre":"Juan"{@"telefono":"3663762727"{@"direccion":"tuxtla"{@"estado":"chiapas"{@"detalles":"prueba"}}}}}
        new b{@"nombre":"Daniel"{@"telefono":"83847449"{@"direccion":"tuxtla"{@"estado":"chiapas"{@"detalles":"prueba"}}}}}
        new c{@"nombre":"Leo"{@"telefono":"395899933"{@"direccion":"tuxtla"{@"estado":"chiapas"{@"detalles":"prueba"}}}}}
        new d{@"nombre":"Marcos"{@"telefono":"20998488"{@"direccion":"tuxtla"{@"estado":"chiapas"{@"detalles":"prueba"}}}}}
        
        do list.add(lista,a)
        do list.add(lista,b)
        do list.add(lista,c)
        do list.add(lista,d)
		new @table_definition
	    {
             @"datatable*":lista
              @"id":"table-all"
              member @"attributes"
                {
                    @"class":"table table-hover"
                }
	        
	        member @"columns"
	        {  
	            member @"nombre"
	            {
                    
	                @"caption":"Nombre"

                    member @"attributes"{
                        @"class":"head-th"
                    }
	            }
	            member @"telefono"
	            {
	                @"caption":"Telefono"
                     member @"attributes"{
                        @"class":"head-th"
                    }
	            }
                member @"direccion"
                {
                    @"caption":"Direcci√≥n"
                     member @"attributes"{
                        @"class":"head-th"
                    }
                }
                member @"estado"
                {
                    @"caption":"Estado"
                     member @"attributes"{
                        @"class":"head-th"
                    }
                }
                member @"detalles"
                {
                    @"caption":"Detalles"
                    member @"attributes"{
                        @"class":"head-th"
                    }

                }
                member @"acciones"
                {
                    @"caption":"Acciones"
                    member @"attributes"{
                        @"class":"head-th"
                    }

                }
				
	        }
            member @"rows_attributes"
            {
                // Atributos para la fila de encabezados de la tabla
                member @"header"
                {
                    @"class":"head" //Ejemplo
                }
              
              
                    member @"detail"
                    {
                        @"class":"t-body" //Ejemplo
                    }
                    
                
                
            }
	       
	    }
	    do uie.dbtable(@table_definition)
	}

